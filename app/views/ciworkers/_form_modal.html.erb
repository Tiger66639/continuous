<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Create
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
<%= form_for(@ciworker, html: {role: "form"}) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create New CI Worker</h4>
      </div>
      <div class="modal-body">

  <% if @ciworker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ciworker.errors.count, "error") %> prohibited this ciworker from being saved:</h2>

      <ul>
      <% @ciworker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= select_tag("ciworker[image]", options_for_select([['ubuntu','ubuntu'],['centos','centos'],['centos7','centos7'],['trusty','trusty'],['container','container']],@ciworker.image), {:multiple => false, :class => "form-control"} ) %>
  </div>
  <div class="form-group">
    <%= f.label :flavor %><br>
    <%= select_tag("ciworker[flavor]", options_for_select([['small',1022],['medium',2002]],@ciworker.flavor), {:multiple => false, :class => "form-control"} ) %>
  </div>
  <div class="form-group">
    <%= f.label :cistack %><br>
    <%= select_tag("ciworker[cistack_id]", options_for_select(@cistacks.all.collect {|t| [t.name, t.id]}, @ciworker.cistack_id), {:multiple => false, :class => "form-control" } ) %>
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Create', :class => "btn btn-primary" %>
      </div>
    </div>
      <% end %>
  </div>
</div>

