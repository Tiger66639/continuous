<h1>Listing dashboards</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>View</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashboards.each do |dashboard| %>
      <tr>
        <td><%= dashboard.name %></td>
	 <td><a href="http://<%= #{Continuous::Application.config.dashboardserver} %>/<%= dashboard.name %>">Link</a></td>
        <td><%= link_to 'Show', dashboard %></td>
        <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render 'form_modal' %>
