<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Create
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
<%= form_for(@validation_job, html: {role: "form"}) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create New Workflow Task </h4>
      </div>
      <div class="modal-body">

  <% if @validation_job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@validation_job.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @validation_job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :task_type %><br>
    <%= select_tag("validation_job[jobtype]", options_for_select([['small','small'],['medium','medium'],['large','large']],@validation_job.jobtype), {:multiple => false, :prompt => "Select type of job", :class => "form-control"} ) %>
  </div>
  <div class="form-group">
    <%= f.label :definition %><br>
    <%= f.text_area :definition, :class => "form-control" %>
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Create', :class => "btn btn-primary" %>
      </div>
    </div>
      <% end %>
  </div>
</div>
