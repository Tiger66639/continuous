<h1>Listing replicas</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replicas.each do |replica| %>
      <tr>
        <td><%= replica.name %></td>
        <td><%= replica.destination %></td>
        <td><%= link_to 'Show', replica %></td>
        <td><%= link_to 'Destroy', replica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form_modal' %>
