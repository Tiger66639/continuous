<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Fqdn</th>
      <th>Status</th>
      <th>IP Address</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cistacks.each do |cistack| %>
      <tr>
        <td><%= cistack.name %></td>
        <td><%= link_to "#{cistack.name}.#{Continuous::Application.config.cistackdomain}", "http://#{cistack.name}.#{Continuous::Application.config.cistackdomain}/r/" %></td>
        <td><%= cistack.status %></td>
        <td><%= cistack.publicip %></td>
        <td><%= link_to 'Show', cistack %></td>
	<td><%= link_to 'Manage', "/cistacks/#{cistack.id}/manage" %></td>
        <td><%= link_to 'Destroy', cistack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

