<h1>Listing deploys</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deploys.each do |deploy| %>
      <tr>
        <td><%= deploy.uuid %></td>
        <td><%= deploy.status %></td>
        <td><%= link_to 'Show', deploy %></td>
        <td><%= link_to 'Destroy', deploy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form_modal' %>
