<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :permission %><br>
    <%= select_tag("role[permission_ids]", options_for_select(@permission.all.collect {|t| [t.name, t.id]}, @role.permission_ids), {:multiple => true, :prompt => 'Select Permissions', :class => "form-control" } ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
