   <div class="container">
     <div class="row">
      <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
      <% end %>
    </div>
    <div class="row">
     <div class="col-md-6 col-md-offset-3">
      <%= form_tag(controller: "home", action: "login", method: :post, class: "form-signin", role: "form") do %>
        <h2 class="form-signin-heading">Welcome to Continuous</h2>
        <%= label_tag :username, "Username:", class: "sr-only" %>
        <%= text_field_tag 'username', nil, { class: "form-control", placeholder: "Username", required: true, autofocus: true} %>
        </br>
        <%= label_tag(:password, "Password:", class: "sr-only") %>
        <%= password_field_tag 'password', nil, { class: "form-control", placeholder: "Password", required: true, autofocus: true} %>
        </br>
        <%= submit_tag("Log In", class: "btn btn-lg btn-default btn-block") %>
      <% end %>
     </div>
    </div>  
   </div> <!-- /container -->

